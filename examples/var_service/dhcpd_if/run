#!/bin/sh

exec 2>&1
exec </dev/null

pwd="$PWD"

if="${PWD##*/dhcpd_}"

echo "* Upping iface $if"
ip link set dev $if up || exec sleep 5

>>udhcpd.leases
sed 's/^interface.*$/interface '"$if/" -i udhcpd.conf

echo "* Starting udhcpd on $if [$$]"
exec \
env - PATH="$PATH" \
softlimit \
setuidgid root \
udhcpd -f -vv udhcpd.conf

exit $?
